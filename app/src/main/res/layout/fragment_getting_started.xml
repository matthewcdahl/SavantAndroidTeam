<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/homepage_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/getting_started_red"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">
        </Button>

        <Button
            android:id="@+id/start_dev_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/getting_started_blue"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/scrum_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/getting_started_green"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <Button
            android:id="@+id/rules_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/getting_started_yellow"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/problem_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/getting_started_orange"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <Button
            android:id="@+id/mvp_btn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/getting_started_purple"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

    </LinearLayout>




</LinearLayout>