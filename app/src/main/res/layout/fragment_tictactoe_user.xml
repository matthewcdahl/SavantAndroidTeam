<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_with_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:id="@+id/ttt_view"
        android:padding="15dp"
        android:tag="HIIIII"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ttt_tl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />
            <ImageView
                android:id="@+id/ttt_tc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />
            <ImageView
                android:id="@+id/ttt_tr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ttt_ml"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />
            <ImageView
                android:id="@+id/ttt_mc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />
            <ImageView
                android:id="@+id/ttt_mr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ttt_bl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />
            <ImageView
                android:id="@+id/ttt_bc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000000" />
            <ImageView
                android:id="@+id/ttt_br"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_your_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You: X"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tv_opp_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opponent: O"
            android:textSize="30sp"/>

    </LinearLayout>



</LinearLayout>