<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_with_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#216d99"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:layout_marginTop="?attr/actionBarSize">


        <EditText
            android:id="@+id/et_meetings_host_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_background_session_diff"
            android:hint="Enter Meeting Name..."
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_meetings_host_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_meetings_host_name"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_background_session_diff"
            android:hint="Enter Meeting Place..."
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_meetings_host_desc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/et_meetings_host_place"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_background_session_diff"
            android:gravity="start"
            android:hint="Enter Description..."
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btn_meetings_host_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_meetings_host_desc"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Select Date"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/btn_meetings_host_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_meetings_host_date"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Select Time"
            android:textColor="#000000"
            android:textColorHint="#000000" />


    </RelativeLayout>
</RelativeLayout>