<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff421">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:background="#7b7b7b"
        android:id="@+id/recyclerView">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/no_current_sessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Current Games"
        android:textSize="30sp"
        android:textColor="#960d0d"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/press_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on + above to start a Game"
        android:textSize="19sp"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_below="@id/no_current_sessions"/>


</RelativeLayout>